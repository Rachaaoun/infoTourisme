        {% block content %}


            <table border="1">
                <tr>
                    <th>Id</th>

                    <th>Prix</th>
                    <th>Numero</th>
                    <th>Etage</th>
                    <th>Hotel</th>
                    <th>Nombre de lit</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
                <tr {% for c in chambre %}>
                    <td>{{ c.id }}</td>

                    <td>{{ c.prix }}</td>
                    <td>{{ c.numero }}</td>
                    <td>{{ c.etage }}</td>
                    <td>{{ c.hotel.nom }}</td>
                    <td>{{ c.nlits }}</td>
                    <td><a href="{{ path('updateChambre',{'id':c.id}) }}">Update</a></td>
                    <td><a href="{{ path('delete',{'id':c.id}) }}">Delete</a></td>
                </tr {% endfor %}>
            </table>


        {% endblock %}

